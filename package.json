{
  "name": "template_server",
  "version": "0.1.0",
  "description": "Template Express TypeORM Swagger REST Server",
  "main": "",
  "engines": {
    "node": ">=8.11.0",
    "yarn": ">=1.7.0"
  },
  "pre-commit": [],
  "scripts": {
    "test": "yarn lint && yarn test:unit && yarn test:integration",
    "test:unit": "yarn env:test nyc mocha --timeout 10000 -r ts-node/register ./src/tests/unit/**/*.spec.ts",
    "test:integration": "yarn build:tsoa && yarn env:test mocha --timeout 35000 -r ts-node/register ./src/tests/integration/**/*.spec.ts --exit",
    "test:coverage": "yarn test:unit && google-chrome ./coverage/index.html",
    "start": "yarn start:dev",
    "start:local": "yarn build:tsoa && yarn env:local ts-node-dev --respawn ./src",
    "start:dev": "yarn build:tsoa && yarn env:dev ts-node-dev --respawn ./src",
    "start:prod": "yarn build:tsoa && yarn env:dev ts-node-dev --respawn ./src",
    "build": "yarn build:prod",
    "build:routes": "tsoa routes",
    "build:swagger": "tsoa swagger --basePath /v1",
    "build:tsoa": "yarn clean && yarn build:routes && yarn build:swagger",
    "build:prod": "yarn build:tsoa && tsc && yarn copy",
    "lint": "tslint -c \"./tslint.json\" -p \"./tsconfig.json\"",
    "clean": "rm -rf ./dist && rm -rf ./build && mkdir build",
    "copy": "yarn copy:swagger && yarn copy:env",
    "copy:swagger": "cp -R ./build/swagger ./dist/build/swagger",
    "copy:env": "cp -R ./src/config/env ./dist/src/config/env",
    "env:local": "cross-env NODE_ENV=local",
    "env:dev": "cross-env NODE_ENV=development",
    "env:test": "cross-env NODE_ENV=test",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "database:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync"
  },
  "author": "Nedeljko Pejašinović",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.814.0",
    "bcryptjs": "^2.4.3",
    "cross-env": "^5.1.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "inversify": "^4.11.1",
    "inversify-binding-decorators": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "pg": "^7.4.1",
    "pg-hstore": "^2.3.2",
    "reflect-metadata": "^0.1.12",
    "request-promise": "^4.2.2",
    "sinon": "^4.5.0",
    "swagger-ui-express": "^3.0.6",
    "tsoa": "2.4.3",
    "typeorm": "^0.2.9",
    "umzug": "^2.1.0",
    "uuid": "^3.2.1",
    "winston": "^3.0.0-rc4"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/chai": "^4.1.2",
    "@types/colors": "^1.2.1",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.0.0",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.6",
    "@types/randomstring": "^1.1.6",
    "@types/request-promise": "^4.1.41",
    "@types/sinon": "^4.3.1",
    "@types/supertest": "^2.0.4",
    "@types/umzug": "^2.1.1",
    "@types/uuid": "^3.4.3",
    "chai": "^4.1.2",
    "colors": "^1.2.1",
    "faker": "^4.1.0",
    "mocha": "^5.0.5",
    "nyc": "^14.1.1",
    "pre-commit": "^1.2.2",
    "randomstring": "^1.1.5",
    "supertest": "^3.0.0",
    "ts-node": "^5.0.1",
    "ts-node-dev": "^1.0.0-pre.18",
    "tslint": "^5.9.1",
    "typescript": "^2.9.2",
    "yarn": "^1.5.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": false,
    "exclude": [
      "src/tests/**",
      "src/ioc.ts",
      "src/setup/**",
      "src/config/SQLDbConnection.ts",
      "src/models/*Model.ts",
      "src/repositories/sql/entities/**"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html"
    ]
  }
}
